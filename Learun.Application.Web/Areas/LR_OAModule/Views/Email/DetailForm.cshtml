@{
    ViewBag.Title = "详情";
    Layout = "~/Views/Shared/_Form.cshtml";
}
    <div class="lr-form-wrap" id="form" style="padding:0">
        <div class="col-xs-12 lr-form-item">
            <div class="lr-form-item-title">主题</div>
            <input id="F_Theme" type="text" class="form-control" readonly="readonly" />
        </div>
        <div class="col-xs-12 lr-form-item">
            <div class="lr-form-item-title">收件人</div>
            <input id="addresssIds" type="text" class="form-control" readonly="readonly" />
        </div>
        <div class="col-xs-12 lr-form-item">
            <div class="lr-form-item-title">抄收人</div>
            <input id="copysendIds" type="text" class="form-control" readonly="readonly" />
        </div>
        <div class="col-xs-6 lr-form-item">
            <div class="lr-form-item-title">发件人</div>
            <input id="F_SenderName" type="text" class="form-control" readonly="readonly" />
        </div>
        <div class="col-xs-6 lr-form-item">
            <div class="lr-form-item-title">日期</div>
            <input id="F_SenderTime" type="text" class="form-control" readonly="readonly" />
        </div>
        <div class="col-xs-12 lr-form-item">
            <div class="lr-form-item-title">附件</div>
            <div id="F_Files"></div>
        </div>
        <div class="col-xs-12 lr-form-item">
            <div style="position:relative;width:100%;height:300px;overflow-y:auto;border:1px solid #ccc;border-radius:5px;" id="F_EmailContent"></div>
        </div>
    </div>
@Html.AppendJsFile("/Areas/LR_OAModule/Views/Email/DetailForm.js")
